<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th>Category</th>
      <th>Item</th>
      <th>Name</th>
      <th>Price</th>
      <th>Good</th>
      <th>Bad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.shop %></td>
        <td><%= item.category %></td>
        <td><%= item.item %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.good %></td>
        <td><%= item.bad %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

